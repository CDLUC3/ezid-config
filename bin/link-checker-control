#! /bin/bash

USAGE="Usage: $0 start|stop"
SR=/ezid/apache/ezid/SITE
PR=$SR/PROJECT
pidfile=$SR/logs/link-checker.pid

if [ $# -ne 1 ]; then
    echo "$USAGE"
    exit 1
fi

case $1 in
    start)
        if [ -e $pidfile ]; then
            pid=$(cat $pidfile)
            if [ -e /proc/$pid ]; then
                echo "Process is already running; aborting" >&2
                exit 1
            fi
            rm $pidfile
        fi
        $PR/tools/link-checker < /dev/null &>> $SR/logs/link-checker.log &
        pid=$!
        sleep 1
        if [ ! -e /proc/$pid ]; then
            echo "Link checker failed to start" >&2
            exit 1
        fi
        echo $pid > $pidfile
        monit -c ~/.monitrc
        ;;
    stop)
        if [ ! -e $pidfile ]; then
            echo "No PID file; aborting" >&2
            exit 1
        fi
        pid=$(cat $pidfile)
        if [ -e /proc/$pid ]; then
            monit -c ~/.monitrc quit
            kill $pid
        else
            echo "No process to kill; removing PID file" >&2
        fi
        rm $pidfile
        ;;
    *)
        echo "$USAGE"
        exit 1
        ;;
esac
