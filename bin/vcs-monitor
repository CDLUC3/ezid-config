#! /bin/bash

# Enable/disable monitoring by VCS.

USAGE="Usage: $0 enable|disable"
SENTINEL=/ezid/init.d/VCS_MONITOR_DISABLED

if [ $# -ne 1 ]; then
    echo $USAGE
    exit 1
fi

case $1 in
    enable)
        rm -f $SENTINEL
        ;;
    disable)
        touch $SENTINEL
        ;;
    *)
        echo $USAGE
        exit 1
        ;;
esac
